# Tracklistify Configuration Template
# Copy this file to .env and adjust values as needed

# ACRCloud API Configuration
ACR_ACCESS_KEY=your_access_key_here
ACR_ACCESS_SECRET=your_access_secret_here
ACR_HOST=identify-eu-west-1.acrcloud.com
ACR_TIMEOUT=10

# Track Identification Settings
SEGMENT_LENGTH=60
MIN_CONFIDENCE=0
TIME_THRESHOLD=60
MAX_DUPLICATES=2

# Timing Configuration
MIN_GAP_THRESHOLD=1.0      # Minimum gap duration to report (seconds)
MAX_GAP_THRESHOLD=30.0     # Maximum acceptable gap duration (seconds)
MIN_OVERLAP_THRESHOLD=0.5  # Minimum overlap duration to report (seconds)
MAX_OVERLAP_THRESHOLD=10.0 # Maximum acceptable overlap duration (seconds)
TIMING_CONFIDENCE_THRESHOLD=0.7  # Minimum confidence for timing information
SEGMENT_OVERLAP=0.5        # Overlap between analysis segments (ratio)
TIMING_MERGE_THRESHOLD=2.0 # Maximum time difference to merge duplicate tracks (seconds)

# Output Configuration
OUTPUT_FORMAT=json         # Options: json, markdown, m3u
OUTPUT_DIR=tracklists
INCLUDE_TIMING_DETAILS=true
WARN_ON_GAPS=true
WARN_ON_OVERLAPS=true

# Application Settings
VERBOSE=false
MAX_REQUESTS_PER_MINUTE=60
RATE_LIMIT_ENABLED=true

# Cache Settings
CACHE_ENABLED=true
CACHE_DIR=.cache
CACHE_DURATION=86400      # 24 hours in seconds
